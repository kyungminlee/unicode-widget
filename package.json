{
  "name": "unicode-widget",
  "version": "0.1.9",
  "description": "Unicode Widget",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "https://github.com/kyungminlee/unicode-widget",
  "keywords": ["unicode"],
  "author": "Kyungmin Lee",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-builder": "^22.0.0"
  },
  "dependencies": {
    "fuzzaldrin-plus": "^0.6.0"
  },
  "build": {
    "appId": "com.unicode-widget.app",
    "win": {
      "icon": "assets/win/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/png",
      "target": ["AppImage", "tar.xz"]
    },
    "mac": {
      "icon": "assets/mac/icon.icns",
      "target": ["default"],
      "hardenedRuntime": true
    },
    "nsis": {
      "installerIcon": "win\\icon.ico",
      "createDesktopShortcut": false
    }
  },
  "files": [
    "ucd.nounihan.simplified.json"
  ]
}
